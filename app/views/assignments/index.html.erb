

<h1>Task</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Request accept</th>
      <th>Location</th>
      <th>Status</th>
      <th>Datecomplete</th>
      <th>Task</th>
      <th>Document</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.request_accept %></td>
        <td><%= assignment.location %></td>
        <td><%= assignment.status %></td>
        <td><%= assignment.datecomplete %></td>
        <td><%= assignment.task.try(:id) %></td>
        <td><%= assignment.document_task.document.try(:serialno)%></td>
        <td><%= link_to "Show", task_assignments_path , class: "btn btn-info"%>
        <%= link_to 'Edit', edit_task_assignment_path(@task,assignment) , class: "btn  btn-warning"  %>
        <%= link_to 'Destroy', task_assignment_path(@task,assignment), method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assignment', new_task_assignment_path %>
