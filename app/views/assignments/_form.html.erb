<%= simple_form_for([@task,@assignment]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :request_accept %>
    <%= f.input :location %>
    <%= f.input :status %>
    <%= f.input :datecomplete %>
    <%= f.association :task , :label_method => :id%>
    <%= f.association :document_task, :label_method => :id%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
