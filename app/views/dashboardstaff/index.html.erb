  <%= flash_messages %>


<h1>List of Documents</h1>

<table class="table table-striped table-bordered ">
   <thead class="thead-inverse">
    <tr>
      <th>Serialno</th>
      <th>Title</th>
      <th>Attachment</th>
      <th>Form</th>
      <th>Date Submit</th>
      <th>Do Task</th>
    </tr>
  </thead>

  <tbody>
    <% @document.each do |document| %>
      <tr>
        <td><%= document.serialno %></td>
        <td><%= document.title %></td>
        <td><%= link_to "Download Document", document.attachment_url %></td>
        <td><%= document.form.try(:formname)%></td>
        <td><%= document.datesubmit %></td>
        <td><%= link_to "Do Task", :controller => "dashboardstaff", :action =>"create",:id => document.id  %>
        </td>


      </tr>
    <% end %>
  </tbody>
</table>


