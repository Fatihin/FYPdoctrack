<%= flash_messages %>


<h1>Documents</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Serialno</th>
      <th>Title</th>
      <th>Attachment</th>
      <th>Description</th>
      <th>Form</th>
      <th>Date Submit</th>
      <th>ID user </th>
      <th >Options</th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.serialno %></td>
        <td><%= document.title %></td>
        <td><%= link_to "Download Document", document.attachment_url %></td>
        <td><%= document.desc %></td>
        <td><%= document.form.try(:formname)%></td>
        <td><%= document.datesubmit %></td>
        <td><%= document.user.try(:iduser) %></td>
        <td><%= link_to 'Show', document , class: "btn btn-info"%>
        <%= link_to 'Edit', edit_document_path(document), class: "btn  btn-warning" %>
        <%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path %>
